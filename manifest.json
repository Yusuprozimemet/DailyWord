{
  "manifest_version": 3,
  "name": "Daily Word Popup",
  "version": "1.1",
  "description": "Displays a new word and sentence each day, with a feature to save selected words from webpages.",
  "permissions": [
    "storage", "alarms", "activeTab", "scripting", "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": ["<all_urls>"]
}
